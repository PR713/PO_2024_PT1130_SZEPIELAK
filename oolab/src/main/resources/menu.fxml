<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.MenuPresenter">
    <center>
        <VBox>
            <HBox alignment="CENTER" spacing="50" prefHeight="475">
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Map size"/>
                    <HBox alignment="CENTER" spacing="10">
                        <Label>X :</Label>
                        <TextField fx:id="xSizeField" prefWidth="35" promptText="Enter map size X" text="10"/>
                        <Label> Y :</Label>
                        <TextField fx:id="ySizeField" prefWidth="35" promptText="Enter map size Y" text="10"/>
                    </HBox>
                    <VBox prefHeight="1"></VBox>
                    <Label>Start animal count</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Start grass count</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Energy from grass</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Minimal mutation count</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Genome length</Label>
                    <TextField></TextField>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <VBox prefHeight="1"></VBox>
                    <Label>Daily grass growth</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Base animal energy</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Energy needed to reproduce</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Energy consumed during reproduce</Label>
                    <TextField></TextField>
                    <VBox prefHeight="1"></VBox>
                    <Label>Maximum mutation count</Label>
                    <TextField></TextField>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Config name:"/>
                    <TextField promptText="Enter new config name..." fx:id="configNameField"/>
                    <Button text="Save" onAction="#createNewConfig"/>
                    <Label></Label>
                    <ScrollPane prefHeight="300">
                        <content>
                            <VBox fx:id="configList">
                                <HBox>
                                    <Button text="NazwaConfig" prefWidth="100"/>
                                    <Button text="X"/>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </HBox>

            <VBox alignment="CENTER" prefHeight="75">
                <Button prefWidth="150" onAction="#onSimulationStartClicked">Run</Button>
                <Label style="-fx-text-fill: red;">sizeX Value is invalid, please try again</Label>
            </VBox>

        </VBox>

    </center>


</BorderPane>
