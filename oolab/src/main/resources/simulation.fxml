<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="600.0" minWidth="1000.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <center>
        <HBox>
            <VBox minWidth="300.0" prefWidth="300">
                <TabPane prefHeight="600"
                         style="-fx-border-color: transparent grey transparent transparent; -fx-border-width: 2 2px 2 2;">
                    <Tab text="Controls" closable="false">
                        <content>
                            <VBox alignment="center" spacing="10">
                                <Label minWidth="300.0" fx:id="dayInfoLabel" alignment="center">Day 1</Label>
                                <Button prefWidth="180" onAction="#startSimulation" fx:id="startSimulationButton">
                                    Start
                                </Button>
                                <Button prefWidth="180" onAction="#stopSimulation" disable="true"
                                        fx:id="stopSimulationButton">Stop
                                </Button>
                            </VBox>
                        </content>

                    </Tab>
                    <Tab text="Statistics" closable="false" fx:id="statisticsTab">
                        <content>
                            <VBox alignment="center" spacing="30">
                                <GridPane layoutX="50" layoutY="50" hgap="10" vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints prefWidth="195"/>
                                        <ColumnConstraints percentWidth="35"/>
                                    </columnConstraints>
                                    <Label text="Animal count:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <Label text="123" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                           fx:id="animalCountStat"/>

                                    <Label text="Grass count:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                           fx:id="grassCountStat"/>

                                    <Label text="Empty cells:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                           fx:id="emptyCellsStat"/>

                                    <Label text="Best genome (pink):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                           fx:id="bestGenomeStat"/>

                                    <Label text="Mean Alive Animals Energy:" GridPane.rowIndex="4"
                                           GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="4" GridPane.columnIndex="1"
                                           fx:id="meanAnimalEnergyStat"/>

                                    <Label text="Mean Dead Animals Lifespan:" GridPane.rowIndex="5"
                                           GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="5" GridPane.columnIndex="1"
                                           fx:id="meanLifeLengthStat"/>

                                    <Label text="Alive Animals Mean Child Count:" GridPane.rowIndex="6"
                                           GridPane.columnIndex="0"/>
                                    <Label text="Name 1:" GridPane.rowIndex="6" GridPane.columnIndex="1"
                                           fx:id="meanChildCountStat"/>
                                </GridPane>
                                <GridPane fx:id="animalDetailsGrid" visible="false" layoutX="50" layoutY="50" hgap="10"
                                          vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints prefWidth="150"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>
                                    <Label text="Genome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <Label text="12345670" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                           fx:id="animalGenomeStat"/>

                                    <Label text="Active Genome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <Label text="3456" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                           fx:id="animalActiveGenomeStat"/>

                                    <Label text="Energy:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <Label text="15" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                           fx:id="animalEnergyStat"/>

                                    <Label text="Plants consumed:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <Label text="23" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                           fx:id="animalPlantsConsumedStat"/>

                                    <Label text="Child count:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                    <Label text="3" GridPane.rowIndex="4" GridPane.columnIndex="1"
                                           fx:id="animalChildCountStat"/>

                                    <Label text="Descendant count:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                    <Label text="6" GridPane.rowIndex="5" GridPane.columnIndex="1"
                                           fx:id="animalDescendantCountStat"/>

                                    <Label text="Days alive:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                    <Label text="5" GridPane.rowIndex="6" GridPane.columnIndex="1"
                                           fx:id="animalDaysAliveStat"/>
                                </GridPane>
                            </VBox>
                        </content>
                    </Tab>
                </TabPane>
            </VBox>
            <VBox alignment="center" prefWidth="700">
                <GridPane alignment="CENTER" gridLinesVisible="true" fx:id="mapGrid"></GridPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>
